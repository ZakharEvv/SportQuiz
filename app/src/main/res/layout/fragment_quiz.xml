<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#29304D"
    tools:context=".presentation.ui.QuizFragment">

    <LinearLayout
        android:id="@+id/btn_back_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line_back"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_header_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quizzes"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingStart="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_margin="25dp">
        
        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="24dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/tv_question_number_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1/10"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="38dp"
            android:layout_height="24dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="7dp">
            <TextView
                android:id="@+id/tv_level_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="1"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/teal_700"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/image_view_sport_quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_main"
        android:orientation="vertical"
        android:layout_marginTop="230dp">
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            app:cardBackgroundColor="#EAECEF"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:id="@+id/tv_question_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asfasdfasdfasdfasdfsadfsfdgsfgsdfg"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:id="@+id/btn_first_answer_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#EAECEF">
                <TextView
                    android:id="@+id/tv_first_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="asdf"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:id="@+id/btn_second_answer_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#EAECEF">
                <TextView
                    android:id="@+id/tv_second_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="asdf"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:id="@+id/btn_third_answer_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#EAECEF">
                <TextView
                    android:id="@+id/tv_third_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="asdf"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>